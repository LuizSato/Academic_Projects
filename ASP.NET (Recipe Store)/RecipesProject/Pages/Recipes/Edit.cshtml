@page
@model RecipesProject.Controllers.EditModel

@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" , initial-scale=1 />
    <title>InsertPage</title>
    <link href="~/css/InsertStyle.css" rel="stylesheet" />
</head>
<body>
    <div class="submit">
        <div class="container">
            <div class="col-md-4 mb-5 mb-lg-0">
                <h2>Submit Recipe</h2>
            </div>
        </div>
    </div>
    <br />
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Recipe.RecipeID" />
                    <div class="form-group">
                        <label asp-for="Recipe.RecipeName" class="control-label">Recipe Name</label>
                        <input asp-for="Recipe.RecipeName" class="form-control" />
                        <span asp-validation-for="Recipe.RecipeName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Recipe.Category" class="control-label">Choose category</label>
                        <select asp-for="Recipe.Category" class="js-search-category select2-style form-control" data-placeholder="Choose Category" tabindex="-1" aria-hidden="true" required="required">
                            <option value="All">All</option>
                            <option value="Breakfast">Breakfast</option>
                            <option value="Lunch">Lunch</option>
                            <option value="Beverages">Beverages</option>
                            <option value="Appetizers">Appetizers</option>
                            <option value="Soups">Soups</option>
                            <option value="Salads">Salads</option>
                            <option value="Beef">Beef</option>
                            <option value="Poultry">Poultry</option>
                            <option value="Pork">Pork</option>
                            <option value="Seafood">Seafood</option>
                            <option value="Vegetarian">Vegetarian</option>
                            <option value="Vegetables">Vegetables</option>
                            <option value="Desserts">Desserts</option>
                            <option value="Breads">Breads</option>
                            <option value="Holidays">Holidays</option>
                        </select>
                        <span asp-validation-for="Recipe.Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Recipe.Description" class="control-label"></label>
                        <textarea asp-for="Recipe.Description" class="form-control"></textarea>
                        <span asp-validation-for="Recipe.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Recipe.Directions" class="control-label"></label>
                        <textarea asp-for="Recipe.Directions" class="form-control"></textarea>
                        <span asp-validation-for="Recipe.Directions" class="text-danger"></span>
                    </div>

                    <!--Add js. to diplay the picture after the user add image.-->
                    @*<div class="form-group">
            <label>Upload your photos</label>
            <input type="file" class="form-control-file">
        </div>*@

                    <!--Add commands to add more a div everytime user click on btn-->
                    @*<div class="form-group">
            <label>Ingredients:</label>
            <div id="sortable" class="sortable"></div>
            <a href="#" class="btn btn-dark">Add new ingredient</a>
        </div>*@

                    <div class="form-group">
                        <h5>Additional Information</h5>
                        <div class="row-insert justify-content-center border border-dark rounded fielset-padding text-center " width="100%">
                            <div class="form-group py-4 px-0 px-lg-3 input-padding">
                                <i class="far fa-clock text-center icon-padding"></i>
                                <label asp-for="Recipe.PreparationTime" class="control-label"></label>
                                <input asp-for="Recipe.PreparationTime" class="form-control" />
                                <span asp-validation-for="Recipe.PreparationTime" class="text-danger"></span>
                            </div>
                            <div class="form-group py-4 px-0 px-lg-3 input-padding">
                                <i class="far fa-clock text-center icon-padding"></i>
                                <label asp-for="Recipe.CookingTime" class="control-label"></label>
                                <input asp-for="Recipe.CookingTime" class="form-control" />
                                <span asp-validation-for="Recipe.CookingTime" class="text-danger"></span>
                            </div>
                            <div class="form-group py-4 px-0 px-lg-3 input-padding">
                                <i class="fas fa-utensils text-center icon-padding"></i>
                                <label asp-for="Recipe.Yield" class="control-label"></label>
                                <input asp-for="Recipe.Yield" class="form-control" />
                                <span asp-validation-for="Recipe.Yield" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row-insert justify-content-center">
                            <div class="group-form">
                                <button class="btn btn-dark" type="reset">Clear Information</button>
                            </div>
                            <div class="group-form">
                                <button class="btn btn-dark" type="submit" value="Save">Save Recipe</button>
                            </div>
                            <div class="group-form">
                                <a class="btn btn-dark" asp-page="Index">Back to List</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
